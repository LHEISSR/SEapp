
<!--pages/index4/schedule.wxml-->

<!-- 这里先用一个折线图给出最近的学习情况记录，下面是一些卡片 -->

<canvas canvas-id='lineCanvas'></canvas>

<view class='margin-bottom'></view>

<block>
  <button wx:for="{{section}}" class='margin'>
    <view class="flex-wrp" style="flex-direction:row;">
      <view class="flex-item bc_green">{{item.name}}</view>
    </view>
    <progress percent='{{item.progress}}' color='#D9C9BA'></progress>
  </button>
</block>

