<scroll-view scroll-y class="scrollPage">
  <!-- <image src='/images/BasicsBg.png' mode='widthFix' class='png' style='width:100%;height:486rpx'></image> -->
  <view class='nav-list'>
    <navigator open-type="navigate" hover-class='none' wx:for="{{section}}" class="nav-li">
      <view class="nav-title">{{item.name}}</view>
      <view class="nav-name">{{item.progress}}</view>
      <text class='cuIcon-{{item.icon}}'></text>
    </navigator>
  </view>
  <view class='cu-tabbar-height'></view>
</scroll-view>